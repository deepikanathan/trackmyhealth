<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/app_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MedicationEditActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_add_medication"
                android:textSize="@dimen/extra_large_text"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <AutoCompleteTextView
                android:id="@+id/med_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/extra_large_padding"
                android:layout_marginRight="@dimen/extra_large_padding"
                android:layout_marginTop="@dimen/extra_large_padding"
                android:background="@drawable/border"
                android:hint="@string/med_name"
                android:inputType="textCapCharacters"
                android:padding="@dimen/large_padding"
                android:drawableRight="@drawable/search_icon"/>

            <TextView
                android:text="@string/med_name_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/medium_text"
                android:layout_marginLeft="@dimen/extra_large_padding"
                android:layout_marginBottom="@dimen/extra_large_padding"/>


            <EditText
                android:id="@+id/med_dose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/extra_large_padding"
                android:layout_marginRight="@dimen/extra_large_padding"
                android:background="@drawable/border"
                android:hint="@string/med_dose"
                android:inputType="numberDecimal"
                android:padding="@dimen/large_padding" />
            <TextView
                android:text="@string/med_dose_eg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/medium_text"
                android:layout_marginLeft="@dimen/extra_large_padding"
                android:layout_marginBottom="@dimen/extra_large_padding"/>

            <EditText
                android:id="@+id/med_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/extra_large_padding"
                android:layout_marginRight="@dimen/extra_large_padding"
                android:background="@drawable/border"
                android:hint="@string/med_unit"
                android:inputType="text"
                android:padding="@dimen/large_padding" />
            <TextView
                android:text="@string/med_unit_eg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/medium_text"
                android:layout_marginLeft="@dimen/extra_large_padding"
                android:layout_marginBottom="@dimen/extra_large_padding"/>

            <EditText
                android:id="@+id/med_frequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/extra_large_padding"
                android:layout_marginRight="@dimen/extra_large_padding"
                android:background="@drawable/border"
                android:hint="@string/med_frequency"
                android:inputType="text"
                android:padding="@dimen/large_padding"/>
            <TextView
                android:text="@string/med_freq_eg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/medium_text"
                android:layout_marginLeft="@dimen/extra_large_padding"
                android:layout_marginBottom="@dimen/extra_large_padding"/>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/extra_large_padding"
                android:layout_marginRight="@dimen/extra_large_padding"
                android:layout_marginTop="@dimen/extra_large_padding"
                android:background="@drawable/border_back"
                android:padding="@dimen/large_padding"
                android:text="@string/med_add" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
