<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/extra_large_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/large_padding"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/date_of_visit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/extra_large_text"
                    android:textStyle="bold"
                    tools:text="@string/date_of_visit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/large_padding"
                android:paddingEnd="@dimen/large_padding"
                android:background="@color/colorGray">

                <TextView
                    android:id="@+id/a1c_key"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:linksClickable="true"
                    android:text="@string/a1c"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/large_text" />

                <TextView
                    android:id="@+id/a1c_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/health_value"
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/colorBlack"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/large_padding"
                android:paddingEnd="@dimen/large_padding"
                android:background="@color/colorGrayDark">

                <TextView
                    android:id="@+id/bloodsugar_key"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:linksClickable="true"
                    android:text="@string/blood_sugar"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/large_text" />

            <TextView
                android:id="@+id/bloodsugar_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/health_value"
                android:textSize="@dimen/large_text"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/large_padding"
                android:paddingEnd="@dimen/large_padding"
                android:background="@color/colorGray">

                <TextView
                    android:id="@+id/trig_key"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:text="@string/trigycerides"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/large_text" />

                <TextView
                    android:id="@+id/trig_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/health_value"
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/large_padding"
                android:paddingEnd="@dimen/large_padding"
                android:background="@color/colorGrayDark">

                <TextView
                    android:id="@+id/weight_key"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/large_text" />

                <TextView
                    android:id="@+id/weight_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/health_value"
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/large_padding"
                android:paddingEnd="@dimen/large_padding"
                android:background="@color/colorGray">

                <TextView
                    android:id="@+id/hdl_key"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:text="@string/HDL"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/large_text" />

                <TextView
                    android:id="@+id/hdl_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/health_value"
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/large_padding"
                android:paddingEnd="@dimen/large_padding"
                android:background="@color/colorGrayDark">

                <TextView
                    android:id="@+id/ldl_key"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:text="@string/LDL"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/large_text" />

                <TextView
                    android:id="@+id/ldl_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/health_value"
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
        </LinearLayout>


