    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
            tools:context=".ui.OptionsActivity"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/options_layout">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/profile_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/extra_large_padding"
                        android:text="@string/profile_screen"
                        android:textSize="@dimen/extra_large_text"
                        />

                    <Button
                        android:id="@+id/journal_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/extra_large_padding"
                        android:text="@string/journal_screen"
                        android:textSize="@dimen/extra_large_text"
                        />

                    <Button
                        android:id="@+id/medications_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/extra_large_padding"
                        android:text="@string/medications_screen"
                        android:textSize="@dimen/extra_large_text"
                        />

                    <Button
                        android:id="@+id/doctor_visit_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/extra_large_padding"
                        android:text="@string/doc_visit_screen"
                        android:textSize="@dimen/extra_large_text"
                        />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

